
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel = "stylesheet" href = "/css/Auth.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <title>EspaçoCar</title>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
   
    </head>
<body>
<div class = "fundo">
    <form class = "itensLogin" asp-action = "Index" asp-controller = "Interface" method = "post">
        <div class = "iconeDiv">
            <img class = "icone" src = "/icone.png">
            <img class = "titulo" src = "/titulo.png">
        </div>
        <div id = "inputsLogin">
            <div id = "fundoVerSenha"></div>
            <input type = "text" id = "login" placeholder="Usuário" spellcheck="false">
            <button type = "button" id = "botaoLogin" onclick = "VerificarLogin()">
                <img src = "/login.png" id = "botaoLoginImagem">
            </button>
            <div id = "fundoEsconderSenha"></div>
            <input type = "password" id = "senha" placeholder = "Senha">
            <button type = "button" id = "botaoVerSenha" onclick = "mostrarSenha()">
                <i id = "botaoVerSenhaImagem" class="bi bi-eye"></i>
               <i id = "botaoEsconderSenhaImagem" class="bi bi-eye-slash-fill"></i>
            </button>
            <button type = "button" id = "botaoSenha" onclick = "VerificarSenha()">
                <img src = "/login.png" id = "botaoSenhaImagem">
            </button>
            <button type = "button" id = "botaoCancelar" onclick="trocarLogin()">
                <img src = "/xicon.png" id = "botaoCancelarImagem">
            </button>
            <input type = "submit" hidden id = "realizarLogin"/>
         </div>
     </form>
</div> 
</body>
 <script src = "~/js/Auth.js"></script>
</html>
