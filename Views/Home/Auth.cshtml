@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel = "stylesheet" href = "/css/Auth.css">
    <title>EspaçoCar</title>
    <script src = "/js/Auth.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
</head>
<body>
<div class = "fundo">
    <form class = "itensLogin">
        <div class = "iconeDiv">
            <img class = "icone" src = "/icone.png">
            <img class = "titulo" src = "/titulo.png">
        </div>
        <div id = "inputsLogin">
            <input type = "text" id = "login" placeholder="Usuário" spellcheck="false">
            <script>
                $("#login").keyup(function (event) {
                    if (event.which === 13) {
                        $("#botaoLogin").click();
                    }
                });
            </script>
            <button type = "button" id = "botaoLogin" onclick = "verificarLogin()">
                <img src = "/login.png" id = "botaoLoginImagem">
            </button>
            <input type = "password" id = "senha" placeholder = "Senha">
            <script>
                $("#senha").keyup(function (event) {
                    $('#botaoVerSenha').show()
                    if (event.which === 13) {
                        $("#botaoSenha").click();
                    }
                });
            </script>
            <button type = "button" id = "botaoVerSenha" onclick = "mostrarSenha()">
                <svg xmlns="http://www.w3.org/2000/svg" id="botaoVerSenhaImagem" width="16" height="16" fill="currentColor" class="bi bi-eye" viewBox="0 0 16 16">
  <path d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.133 13.133 0 0 1 1.66-2.043C4.12 4.668 5.88 3.5 8 3.5c2.12 0 3.879 1.168 5.168 2.457A13.133 13.133 0 0 1 14.828 8c-.058.087-.122.183-.195.288-.335.48-.83 1.12-1.465 1.755C11.879 11.332 10.119 12.5 8 12.5c-2.12 0-3.879-1.168-5.168-2.457A13.134 13.134 0 0 1 1.172 8z"/>
  <path d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
</svg>
            </button>
            <button type = "button" id = "botaoSenha" onclick = "verificarSenha()">
                <img src = "/login.png" id = "botaoSenhaImagem">
            </button>
            <button type = "button" id = "botaoCancelar" onclick="trocarLogin()">
                <img src = "/xicon.png" id = "botaoCancelarImagem">
            </button>
         </div>
     </form>
</div> 
</body>
</html>