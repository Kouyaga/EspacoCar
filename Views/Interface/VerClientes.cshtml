@model Projeto.Models.ClientePF

@{
    ViewData["Title"] = "Espaço Car";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>EspaçoCar</title>
    <link rel="stylesheet" href="~/css/VerClientes.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/js/VerClientes.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
</head>
<body>
    <main id="clientes">
        @using (Html.BeginForm("AdicionarCliente", "Cliente", FormMethod.Post, new { id = "novoClienteInformacoesForm" }))
        {
            <div id=novoClienteInformacoes>
                        <label>CPF: </label>
                        @Html.EditorFor(model => model.CPF, new {id = "novoClienteCPF"})
                        <label>Nome: </label>
                        @Html.EditorFor(model => model.Nome, new {id = "novoClienteCPF"})
                        <label>Sexo: </label>
                        @Html.EditorFor(model => model.Sexo, new {id = "novoClienteCPF"})
                        <label>Data de Nascimento: </label>
                        @Html.EditorFor(model => model.DataDeNascimento, new {id = "novoClienteCPF"})
                        <label>RG: </label>
                        @Html.EditorFor(model => model.RG, new {id = "novoClienteCPF"})
                        <label>Endereço: </label>
                        @Html.EditorFor(model => model.Endereco, new {id = "novoCliente"})
                        <label>Telefones: </label>
                        @Html.EditorFor(model => model.Telefones, new {id = "novoClienteTelefones"})
                        <label>Emails: </label>
                        @Html.EditorFor(model => model.Emails, new {id = "novoClienteEmails"})
            </div>

            <button class="btn btn-outline-success">Adicionar</button>
        }
        <ul type="none" id="listaClientes">
            <li id="clienteInformacoes"></li>
        </ul>
    </main>
</body>
</html>

